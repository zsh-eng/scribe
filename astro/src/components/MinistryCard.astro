---
import type { Ministry } from '../lib/db';

interface Props {
  ministry: Ministry;
}

const { ministry } = Astro.props;
---

<a
  href={`/ministries/${ministry.id}`}
  class="block rounded-lg border border-zinc-200 bg-white p-4 transition-all hover:border-green-300 hover:shadow-md"
>
  <div class="mb-2 flex items-center gap-2">
    <span class="rounded bg-green-100 px-2 py-1 text-sm font-bold text-green-700">
      {ministry.acronym}
    </span>
  </div>
  <h3 class="mb-2 font-semibold text-zinc-900">
    {ministry.name}
  </h3>
  {ministry.sectionCount !== undefined && ministry.sectionCount > 0 && (
    <p class="text-xs text-zinc-500">
      {ministry.sectionCount} sections
    </p>
  )}
</a>
