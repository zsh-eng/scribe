---
interface Props {
  title?: string;
  content: string | null | undefined;
  fallbackMessage?: string;
}

const {
  title = 'AI Summary',
  content,
  fallbackMessage = 'Summary has not been generated yet.'
} = Astro.props;
---

<div class="rounded-lg border border-zinc-200 bg-gradient-to-br from-blue-50 to-indigo-50 p-4">
  <div class="mb-2 flex items-center gap-2">
    <svg class="h-4 w-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
    </svg>
    <h3 class="text-sm font-semibold text-zinc-700">{title}</h3>
  </div>
  {content ? (
    <p class="text-sm text-zinc-600 leading-relaxed whitespace-pre-line">
      {content}
    </p>
  ) : (
    <p class="text-sm text-zinc-400 italic">
      {fallbackMessage}
    </p>
  )}
</div>
